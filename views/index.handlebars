<h1>Eat da Burger!</h1>

<h2>burger!</h2>

<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  <li>
     {{this.id}} {{this.burger_name}}
     <button class="devourBtn" data-id='{{this.id}}'>Devour</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  <li>
     {{this.id}} {{this.burger_name}}
     <button class="delete-burger">Delete</button>
  </li>
  {{/if}}
  {{/each}}


<h2>Add a BURGER</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burgerName">burger name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <div class="form-group">

  </div>

  <button type="submit">Add burger</button>
</form>